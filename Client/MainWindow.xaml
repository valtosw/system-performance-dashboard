<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Live Performance Dashboard" Height="450" Width="800"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Real-Time System Performance" FontSize="24" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <lvc:Gauge From="0" To="100" Value="{Binding CpuUsage}" Margin="20">
                <lvc:Gauge.GaugeRenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                        <TranslateTransform X="0" Y="0" />
                    </TransformGroup>
                </lvc:Gauge.GaugeRenderTransform>
                <lvc:Gauge.LabelFormatter>
                    <Binding Path="CpuUsage" StringFormat="{}{0:0.0}%"/>
                </lvc:Gauge.LabelFormatter>
            </lvc:Gauge>
            <TextBlock Text="CPU Usage" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <lvc:Gauge From="0" To="100" Value="{Binding MemoryUsage}" Margin="20">
                <lvc:Gauge.GaugeRenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                        <TranslateTransform X="0" Y="0" />
                    </TransformGroup>
                </lvc:Gauge.GaugeRenderTransform>
                <lvc:Gauge.LabelFormatter>
                    <Binding Path="MemoryUsage" StringFormat="{}{0:0.0}%"/>
                </lvc:Gauge.LabelFormatter>
            </lvc:Gauge>
            <TextBlock Text="Memory Usage" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Connection Method:" VerticalAlignment="Center" Margin="10"/>
            <RadioButton Content="Web Sockets" IsChecked="True" VerticalAlignment="Center" Margin="5" Checked="RadioButton_Checked"/>
            <RadioButton Content="Long Polling" VerticalAlignment="Center" Margin="5" Checked="RadioButton_Checked"/>
            <RadioButton Content="Frequent Polls" VerticalAlignment="Center" Margin="5" Checked="RadioButton_Checked"/>
        </StackPanel>
    </Grid>
</Window>